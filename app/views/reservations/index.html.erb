<h2>  All reservations </h2>
<%= link_to "HOME", cars_path %>

<table>
  <tr>
    <th> Name </th>
    <th> Surname </th>
    <th> From </th>
    <th> To </th>
  </tr>
  <% @reservations.each do |reservation| %>
    <tr>
      <td><%= reservation.name%> </td>
      <td><%= reservation.surname %> </td>
      <td><%= reservation.from_date.strftime("%m - %d - %Y")  %></td>
      <td><%= reservation.to_date.strftime("%m - %d - %Y") %></td>
      <td><%= link_to "more info", reservation_path(reservation)%></td>
    </tr>
  <% end %>
</table>


<%= link_to "new reservation", new_reservation_path %>
