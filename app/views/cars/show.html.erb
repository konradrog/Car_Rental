<h1> <%= @car.brand %> </h1>

<p> Model
  <%= @car.model %>
</p>

<p> Year
  <%= @car.year %>
</p>

<p> Price
  <%= @car.price %>
</p>

<p> Description
  <%= @car.model %>
</p>

<div>
  <%= image_tag @car.image.url, width: 200 %>
</div>

<% if admin_signed_in? %>
  <%= link_to "Delete car", car_path(@car),
                          method: :delete,
                          data: { confirm: "Are you sure?"} %>
  <%= link_to "edit", edit_car_path(@car) %>
<% end %>

<div>
  <%= render "opinions/form" %>
  <%= render @car.opinions %>
</div>
